	<body>
		<header>
			<h1>Blog Admin</h1>
		</header>
		<main id="add_story">
			<h2>Stories List</h2>
			<nav>
				<a href="/admin" class="button back-btn"
					><i class="fa-solid fa-arrow-left"></i> Back admin panel</a
				>
				<a href="/admin/story/add" class="button add-btn"
					><i class="fa-solid fa-plus"></i> Add a new story</a
				>
			</nav>
			<!-- pour la version post ajouter method="post" -->
			<form action="/admin/story/<%= story.id%>/edit" >
				<h2>Edit story id nÂ°<%= story.id%></h2>
				<input
					type="text"
					name="title"
					id="title"
					placeholder="Entrer le titre"
                    value="<%= story.title%>"
					required
				/>
				<textarea
					name="content"
					id="content"
					placeholder="Entrer le texte"
					required
				><%= story.content%></textarea>

				<button type="submit" class="button submit-btn">Edit</button>
			</form>
		</main>
